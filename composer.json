{
    "name": "cboxdk/statamic-mcp",
    "description": "AI-powered development tools for Statamic CMS. Provides 100+ MCP tools for blueprints, entries, collections, and more.",
    "keywords": ["statamic", "mcp", "ai", "claude", "cursor", "development", "tools", "laravel"],
    "homepage": "https://github.com/cboxdk/statamic-mcp",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Cboxdk\\StatamicMcp\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cboxdk\\StatamicMcp\\Tests\\": "tests"
        }
    },
    "require": {
        "statamic/cms": "^5.0",
        "laravel/mcp": "^0.2.0",
        "symfony/yaml": "^7.3"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0",
        "pestphp/pest": "^4.0@dev",
        "pestphp/pest-plugin-laravel": "^4.0@dev",
        "laravel/pint": "^1.17",
        "larastan/larastan": "^3.0"
    },
    "scripts": {
        "test": "pest --parallel",
        "test:coverage": "pest --parallel --coverage",
        "pint": "pint",
        "pint:test": "pint --test",
        "stan": "phpstan analyse",
        "quality": [
            "@pint",
            "@stan",
            "@test"
        ]
    },
    "config": {
        "allow-plugins": {
            "pixelfear/composer-dist-plugin": true,
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "statamic": {
            "name": "Statamic MCP Server",
            "description": "AI-powered development tools for Statamic CMS. Provides 100+ MCP tools for blueprints, entries, collections, and more."
        },
        "laravel": {
            "providers": [
                "Cboxdk\\StatamicMcp\\ServiceProvider"
            ]
        }
    },
    "suggest": {
        "laravel/boost": "Enhances the development experience when working with this Statamic MCP server by providing powerful Laravel-specific tools and debugging capabilities"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
